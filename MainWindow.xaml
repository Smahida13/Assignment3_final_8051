<Window x:Class="ATMApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM Login" Height="400" Width="800">
    <Grid Margin="85,38,106,40">
        <TextBlock Text="Account Number:" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox Name="AccountNumberTextBox" Margin="150,20,20,0" VerticalAlignment="Top"/>
        <TextBlock Text="Password:" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <PasswordBox Name="PasswordBox" Margin="150,60,20,0" VerticalAlignment="Top"/>
        <Button Content="Login" Width="100" Height="30" Margin="274,123,235,0" VerticalAlignment="Top"
                Click="LoginButton_Click"/>
        <TextBlock Name="StatementTextBlock" Margin="20" VerticalAlignment="Top" />
        <Button Content="Deposit" Width="100" Height="30" Margin="109,195,400,0" VerticalAlignment="Top"
                Click="DepositButton_Click"/>
        <Button Content="Withdraw" Width="100" Height="30" Margin="214,195,295,0" VerticalAlignment="Top"
                Click="WithdrawButton_Click"/>
        <Button Content="Transactions" Width="100" Height="30" Margin="324,195,185,0" VerticalAlignment="Top"
                Click="TransactionsButton_Click"/>
        <Button Content="Exit" Width="100" Height="30" Margin="429,195,80,0" VerticalAlignment="Top"
                Click="ExitButton_Click" RenderTransformOrigin="0.558,0.593"/>
    </Grid>
</Window>
